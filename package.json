{
  "name": "typescript-boilerplate-2021",
  "version": "0.0.1",
  "type": "module",
  "description": "Boilerplate for TypeScript ESM projects",
  "author": "norbornen",
  "repository": "https://github.com/norbornen/typescript-boilerplate",
  "license": "MIT",
  "keywords": [
    "typescript",
    "boilerplate"
  ],
  "main": "./dist/tsc/index.js",
  "types": "./dist/tsc/index.d.ts",
  "scripts": {
    "lint": "eslint src/ --ext .js,.jsx,.ts,.mts,.tsx",
    "test": "yarn lint && tsc --noEmit",
    "clean": "rm -rf dist/*",
    "ts-node": "node --loader ts-node/esm --experimental-specifier-resolution=node",
    "build": "yarn clean && tsc -p tsconfig.json && yarn esbuild-node",
    "esbuild-node": "esbuild src/index.ts --bundle --platform=node --format=esm --target=esnext --external:./node_modules/* --sourcemap=external --outfile=dist/esbuild/index.mjs",
    "esbuild-node:dev": "esbuild src/index.ts --bundle --platform=node --format=esm --target=esnext --external:./node_modules/* --sourcemap=external --outfile=dist/esbuild/index.js",
    "esbuild-node:watch": "esbuild src/index.ts --bundle --platform=node --format=esm --target=esnext --external:./node_modules/* --watch --sourcemap=external --outfile=dist/esbuild/index.js"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.1",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "esbuild": "^0.14.19",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "ora": "^6.0.1"
  }
}
